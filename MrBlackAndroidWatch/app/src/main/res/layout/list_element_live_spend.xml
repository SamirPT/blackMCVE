<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationLL"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/big_padding"
    android:paddingEnd="@dimen/big_padding"
    android:paddingTop="@dimen/main_padding"
    android:paddingBottom="@dimen/main_padding"
    android:background="@color/eventItemBack">

    <TextView
        android:id="@+id/liveSpendUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/text_size_h2"
        tools:text="Vladimir Smith"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/liveSpendValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGreyText"
            android:textSize="@dimen/text_size_h4"
            tools:text="Spend: $2324"/>
        <TextView
            android:id="@+id/liveSpendDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGreyText"
            android:textSize="@dimen/text_size_h4"
            tools:text="Mon, Apr 2, 09:00 AM"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>