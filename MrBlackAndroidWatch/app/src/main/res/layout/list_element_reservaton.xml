<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:t="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resLL"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/eventItemBack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        
        <TextView
            android:id="@+id/resTableTitleMin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textSize="@dimen/text_size_h3"
            tools:text="T-234 (Min $3000)"
            android:background="@color/whiteText"
            android:paddingTop="@dimen/main_padding"
            android:paddingEnd="@dimen/main_padding"
            android:paddingStart="@dimen/big_padding"
            android:paddingBottom="@dimen/main_padding"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/resStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/text_size_h3"
            tools:text="Arrived"
            android:layout_weight="1"
            android:paddingTop="@dimen/main_padding"
            android:paddingEnd="@dimen/big_padding"
            android:paddingStart="@dimen/main_padding"
            android:paddingBottom="@dimen/main_padding"
            android:gravity="end|center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whiteText"/>

    <TextView
        android:id="@+id/resGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/text_size_h2"
        tools:text="Guest Name"
        android:paddingStart="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding"/>

    <TextView
        android:id="@+id/resBooked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/greyText"
        android:textSize="@dimen/text_size_h3"
        tools:text="by Booked Name"
        android:paddingStart="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding"
        android:paddingBottom="@dimen/main_padding"/>

    <TextView
        android:id="@+id/resNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/text_size_h3"
        tools:text="Reservation note"
        android:paddingStart="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding"
        android:paddingBottom="@dimen/main_padding"/>

    <tech.peller.mrblackandroidwatch.utils.FlowLayout
        android:id="@+id/resTagsFL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        t:paddingH="10"
        t:paddingV="10"
        android:layout_marginStart="@dimen/big_padding"
        android:layout_marginEnd="@dimen/big_padding"
        android:layout_marginBottom="@dimen/main_padding"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyText"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/resLiveSpend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redText"
            android:textSize="@dimen/text_size_h3"
            android:textStyle="bold"
            tools:text="Live $2134"
            android:paddingTop="@dimen/main_padding"
            android:paddingEnd="@dimen/main_padding"
            android:paddingStart="@dimen/big_padding"
            android:paddingBottom="@dimen/main_padding"/>

        <TextView
            android:id="@+id/resGuestCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_h3"
            android:textStyle="bold"
            tools:text="40 / 100"
            android:padding="@dimen/main_padding"
            android:layout_toStartOf="@+id/resETA"/>

        <TextView
            android:id="@+id/resETA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text_size_h3"
            android:textStyle="bold"
            tools:text="23:20"
            android:paddingTop="@dimen/main_padding"
            android:paddingEnd="@dimen/big_padding"
            android:paddingStart="@dimen/main_padding"
            android:paddingBottom="@dimen/main_padding"/>
    </RelativeLayout>
</LinearLayout>